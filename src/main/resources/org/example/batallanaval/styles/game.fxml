<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.batallanaval.controller.GameController"
            prefWidth="1100" prefHeight="700"
            style="-fx-background-color: #10243a;">

    <children>

        <HBox spacing="20"
              AnchorPane.topAnchor="10"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10">

            <!-- PANEL IZQUIERDO: TABLEROS UNO AL LADO DEL OTRO -->
            <HBox spacing="40" prefWidth="750">

                <!-- TU TABLERO -->
                <VBox spacing="10">
                    <Label text="Tu Tablero"
                           style="-fx-text-fill: white; -fx-font-size: 18;"/>
                    <GridPane fx:id="playerGrid" hgap="4" vgap="4" styleClass="board-background"/>
                </VBox>

                <!-- TABLERO ENEMIGO -->
                <VBox spacing="10">
                    <Label text="Tablero Enemigo"
                           style="-fx-text-fill: white; -fx-font-size: 18;"/>
                    <GridPane fx:id="machineGrid" hgap="4" vgap="4" styleClass="board-background"/>
                </VBox>

            </HBox>

            <!-- PANEL DERECHO (INFO DEL JUGADOR) -->
            <VBox spacing="15" prefWidth="300">

                <HBox spacing="10">
                    <Label text="Jugador:" style="-fx-text-fill: white;"/>
                    <Label fx:id="lblNickname" text="Jugador" style="-fx-text-fill: white;"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Estado:" style="-fx-text-fill: white;"/>
                    <Label fx:id="lblStatus" text="Listo..." style="-fx-text-fill: white;"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Hundidos:" style="-fx-text-fill: white;"/>
                    <Label fx:id="lblSunkCount" text="0" style="-fx-text-fill: white;"/>
                </HBox>

                <Button fx:id="btnBack" text="Volver" onAction="#onBack"/>

            </VBox>

        </HBox>

    </children>

</AnchorPane>
