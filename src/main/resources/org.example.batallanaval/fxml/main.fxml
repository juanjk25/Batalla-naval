<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.batallanaval.controller.MainController"
            prefWidth="900" prefHeight="600"
            styleClass="root">

    <children>
        <VBox spacing="20" alignment="CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <Label text="BATALLA NAVAL" styleClass="title"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Nickname:"/>
                <TextField fx:id="nicknameField" promptText="Tu nombre..."/>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Nuevo Juego" onAction="#onNewGame" styleClass="btn-primary"/>
                <Button text="Continuar" onAction="#onContinue"/>
                <Button text="Ver tablero máquina" onAction="#onShowMachineBoard"/>
            </HBox>

            <Region prefHeight="20"/>

            <Label text="Interfaz moderna (Opción B)" styleClass="muted"/>

        </VBox>
    </children>
</AnchorPane>