<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.batallanaval.controller.GameController"
            prefWidth="1100" prefHeight="700"
            styleClass="root">

    <children>

        <HBox spacing="20"
              AnchorPane.topAnchor="10"
              AnchorPane.bottomAnchor="10"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10">

            <!-- PANEL IZQUIERDO -->
            <VBox spacing="10" prefWidth="720">

                <Label text="Tu Tablero" styleClass="panel-title"/>
                <GridPane fx:id="playerGrid"
                          hgap="4" vgap="4"
                          styleClass="board-grid"
                />

                <Label text="Tablero Enemigo" styleClass="panel-title" padding="10 0 0 0"/>
                <GridPane fx:id="machineGrid"
                          hgap="4" vgap="4"
                          styleClass="board-grid"
                />

            </VBox>

            <!-- PANEL DERECHO CON INFO -->
            <VBox spacing="12" prefWidth="320" styleClass="side-panel" padding="20">

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Jugador:"/>
                    <Label fx:id="lblNickname" text="Jugador" styleClass="bold"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Estado:"/>
                    <Label fx:id="lblStatus" text="Listo..."/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Hundidos:"/>
                    <Label fx:id="lblSunkCount" text="0"/>
                </HBox>

                <Region/>

                <Button fx:id="btnBack" text="Volver" onAction="#onBack"/>

            </VBox>

        </HBox>

    </children>

</AnchorPane>