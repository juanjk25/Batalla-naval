<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.batalla_naval_re.controller.GameController"
            prefWidth="1200" prefHeight="750"
            style="-fx-background-color: linear-gradient(to bottom, #0b1e35, #10243a);">

    <children>

        <VBox alignment="TOP_CENTER" spacing="30"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- TÃTULO -->
            <Label text="âš“ BATALLA NAVAL âš“"
                   style="-fx-text-fill: white; -fx-font-size: 40px; -fx-font-weight: bold;"/>

            <!-- TABLEROS -->
            <HBox alignment="CENTER" spacing="60">

                <!-- TABLERO DEL JUGADOR -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="TU TABLERO"
                           style="-fx-text-fill: #7CFC00; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                    <GridPane fx:id="playerGrid"
                              hgap="1" vgap="1"
                              style="
                                -fx-background-color: white;
                                -fx-padding: 12;
                                -fx-border-color: #7CFC00;
                                -fx-border-width: 3;
                                -fx-background-radius: 8;
                                -fx-border-radius: 8;"/>
                </VBox>

                <!-- TABLERO DE LA MÃQUINA -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="TABLERO ENEMIGO"
                           style="-fx-text-fill: #ff4c4c; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                    <GridPane fx:id="machineGrid"
                              hgap="1" vgap="1"
                              style="
                                -fx-background-color: white;
                                -fx-padding: 12;
                                -fx-border-color: #ff4c4c;
                                -fx-border-width: 3;
                                -fx-background-radius: 8;
                                -fx-border-radius: 8;"/>
                </VBox>

            </HBox>

            <!-- PANEL INFERIOR -->
            <VBox alignment="CENTER" spacing="25"
                  prefWidth="900"
                  style="
                    -fx-background-color: rgba(255,255,255,0.2);
                    -fx-padding: 30;
                    -fx-background-radius: 15;
                    -fx-border-radius: 15;
                    -fx-border-color: rgba(255,255,255,0.4);
                    -fx-border-width: 1;">

                <!-- INFORMACIÃ“N -->
                <HBox alignment="CENTER" spacing="35">

                    <Label text="Jugador:"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22px;"/>
                    <Label fx:id="lblNickname" text="Jugador"
                           style="-fx-text-fill: #e0eaff; -fx-font-size: 20px;"/>

                    <Label text="|" style="-fx-text-fill: #d0d0d0;"/>

                    <Label text="Estado:"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22px;"/>
                    <Label fx:id="lblStatus" text="Esperando..."
                           style="-fx-text-fill: #e0eaff; -fx-font-size: 20px;"/>

                    <Label text="|" style="-fx-text-fill: #d0d0d0;"/>

                    <Label text="Hundidos:"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22px;"/>
                    <Label fx:id="lblSunkCount" text="0"
                           style="-fx-text-fill: #e0eaff; -fx-font-size: 20px;"/>

                </HBox>

                <!-- BOTONES -->
                <HBox alignment="CENTER" spacing="25">

                    <Button fx:id="btnSave" text="ðŸ’¾ Guardar Partida"
                            onAction="#onSaveGame"
                            style="
                                -fx-background-color: #1f8fff;
                                -fx-text-fill: white;
                                -fx-background-radius: 10;
                                -fx-padding: 8 20;
                                -fx-font-size: 16px;
                                -fx-font-weight: bold;
                                -fx-border-width: 0;"/>

                    <Button fx:id="btnLoad" text="ðŸ“‚ Cargar Partida"
                            onAction="#onLoadGame"
                            style="
                                -fx-background-color: #ffaa22;
                                -fx-text-fill: white;
                                -fx-background-radius: 10;
                                -fx-padding: 8 20;
                                -fx-font-size: 16px;
                                -fx-font-weight: bold;
                                -fx-border-width: 0;"/>

                    <Button fx:id="btnBack" text="â† Volver al MenÃº"
                            onAction="#onBack"
                            style="
                                -fx-background-color: transparent;
                                -fx-text-fill: white;
                                -fx-border-color: white;
                                -fx-border-width: 2;
                                -fx-background-radius: 10;
                                -fx-padding: 8 20;
                                -fx-font-size: 16px;
                                -fx-font-weight: bold;"/>

                </HBox>

            </VBox>

        </VBox>

    </children>

</AnchorPane>
