<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.batalla_naval_re.controller.GameController"
            prefWidth="1100" prefHeight="700"
            style="-fx-background-color: #10243a;">

    <children>

        <!-- CONTENEDOR CENTRAL -->
        <VBox alignment="CENTER" spacing="30"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- FILA SUPERIOR: TÍTULO -->
            <Label text="⚓ BATALLA NAVAL ⚓"
                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>

            <!-- FILA MEDIA: LOS DOS TABLEROS -->
            <HBox alignment="CENTER" spacing="50">

                <!-- TABLERO DEL JUGADOR -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="TU TABLERO"
                           style="-fx-text-fill: #90ee90; -fx-font-size: 18px;"/>
                    <GridPane fx:id="playerGrid"
                              hgap="1" vgap="1"
                              style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #90ee90; -fx-border-width: 2;"/>
                </VBox>

                <!-- TABLERO DE LA MÁQUINA -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="TABLERO ENEMIGO"
                           style="-fx-text-fill: #ff6b6b; -fx-font-size: 18px;"/>
                    <GridPane fx:id="machineGrid"
                              hgap="1" vgap="1"
                              style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #ff6b6b; -fx-border-width: 2;"/>
                </VBox>

            </HBox>

            <!-- FILA INFERIOR: INFORMACIÓN Y CONTROLES -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: rgba(255,255,255,0.6); -fx-padding: 20; -fx-background-radius: 10;"
                  prefWidth="800">

                <!-- INFORMACIÓN DEL JUGADOR -->
                <HBox alignment="CENTER" spacing="40">
                    <Label text="Jugador: " style="-fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 35px;"/>
                    <Label fx:id="lblNickname" text="Jugador"
                           style="-fx-text-fill: #051a52; -fx-font-size: 16px;"/>

                    <Label text="|" style="-fx-text-fill: #666;"/>

                    <Label text="Estado: " style="-fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 35px;"/>
                    <Label fx:id="lblStatus" text="Tu turno"
                           style="-fx-text-fill: #051a52; -fx-font-size: 20px;"/>

                    <Label text="|" style="-fx-text-fill: #666;"/>

                    <Label text="Hundidos: " style="-fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 35px;"/>
                    <Label fx:id="lblSunkCount" text="0"
                           style="-fx-text-fill: #051a52; -fx-font-size: 20px;"/>
                </HBox>

                <!-- BOTÓN VOLVER -->
                <Button fx:id="btnBack" text="← Volver al Menú Principal"
                        onAction="#onBack"
                        style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-color: white; -fx-font-weight: bold; -fx-border-width: 1; -fx-padding: 5 20;"/>

            </VBox>

        </VBox>

    </children>

</AnchorPane>